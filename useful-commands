# My Arch setup
pacman -Sy gnome gnome-extras gdm
pacman -Sy docky
# Gnome icon pack: Superflat-remix
# LANG=nl_BE
setxkbmap -layout be -variant mac
localectl set-x11-keymap be "" mac
# Yaourt install:
# http://revryl.com/2013/07/11/yaourt-installation-arch-linux/

# Yaourt steam:
yaourt steam

# Yaourt spotify
yaourt spotify

# Yaourt atom-editor
yaourt atom-editor

# OpenJDK 8
pacman -Sy jre8-openjdk jdk8-openjdk